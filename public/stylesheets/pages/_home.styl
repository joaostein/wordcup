// 
// TOP
//-----------------------------------------------------------------------
.main-header
  cf()
  background: rgba(#000, .6)
  margin-top: 0px
  padding: 20px

.logo
  center(100px)
  img
    width: 100%
    height: auto

.participate
  font-size(14px)
  p
    margin-top: 0
  ol
    margin-bottom: 0
    margin: 0
    list-style: none
    padding: 0
  .highlight
    font-size(16px)
    font-weight: 700
    color: #fed24f
  p.highlight
    margin-bottom: 10px
    margin-top: 20px

.next-match
  margin-top: 40px
  text-align: center
  figure
    text-align: center
  img
    width: 100%
    display: block
    margin-bottom: 30px
  legend
    width: 100%
    font-size(22px)
    margin-bottom: 5px
  span
    text-transform: uppercase
    font-size(12px)

+above(385px)
  .participate
    .highlight
      font-size(22px)

+above(853px)
  .main-header
    padding: 40px
  .logo
    uncenter()
    width: 100px
    margin-left: 15px
  .participate
    col(7/12)
    .highlight
      font-size(18px)
  .next-match
    text-align: left
    margin-top: 0
    col(5/12)
    span
      font-size(14px)

+above(1024px)
  .main-header
    background: rgba(#fff, .12)

// 
// MAIN CONTENT
//-----------------------------------------------------------------------
.donate
  cf()
  margin-bottom: 70px

.ong
  background: rgba(#eee000, .6)
  padding: 20px 40px 35px
  border-right: 1px solid rgba(#000, .1)
  border-bottom: 1px solid rgba(#000, .1)
  transition(all 0.3s ease-in-out)
  &:hover
    background: rgba(#eee000, .7)
  .social-media
    float: right
  footer
    margin-top: 40px
    cf()

.ong__title
  text-transform: uppercase
  font-size(18px)

.ong__description
  font-size(14px)

+above(1024px)
  .donate
    margin-bottom: 40px
  .ong
    span(4/12)
    min-height: 520px
    position: relative
    padding: 20px 40px
    border-bottom: none
    footer
      position: absolute
      bottom: 40px
      left: 40px
      right: 40px
  .ong__title
    font-size(20px)

// 
// FOOTER
//-----------------------------------------------------------------------
.main-footer
  margin-bottom: 70px
  center(93px)

+above(1024px)
  .main-footer
    uncenter()
    margin-left: 40px


// 
// SOCIAL MEDIA AND BUTTONS
//-----------------------------------------------------------------------
.social-media
  inline-list: 15px
  a, svg
    display: block
  svg
    fill: #000
  li
    background: #fff
    border-radius: 100%

.icon
  height: 39px
  width: 39px

.help-btn
  float: left
  background: #00854a
  inline-block()
  font-size(13px)
  line-height: 25px
  text-transform: uppercase
  padding: 7px
  color: #fff
  text-decoration: none
  transition(all 0.3s ease-in-out)
  &:hover
    background: #00733f

.social-media--alt
  .facebook
    background: #00854a
  .twitter
    background: #fed24f









